<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.1</Version>
        <PackageId>Mierk.Injectable</PackageId>
        <Authors>Mierk</Authors>
        <Company>Mierk.Dev</Company>
        <Description>Attribute-driven, declarative DI registration for .NET.</Description>
        <PackageTags>dependency-injection;di;dotnet;attribute;autowiring</PackageTags>
        <RepositoryUrl>https://github.com/Mierkie/mierk.injectable</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.3" />

        <None Include=".\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
